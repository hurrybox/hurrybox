 <section class="probootstrap-cover overflow-hidden relative"  style="background-image: url('images/bike.jpg');" data-stellar-background-ratio="0.5"  id="section-home">
      <div class="overlay"></div>
      <div class="container">
        <div class="row align-items-center">
          <div class="col-md">
            <h2 class="heading mb-2 display-4 font-light probootstrap-animate">Μετέφερε προϊόντα μέσα στην πόλη σου και κέρδισε μέχρι και 15€/Ώρα</h2>
            <p class="lead mb-5 probootstrap-animate">
          </div> 
            <div class="col-md probootstrap-animate">
                {{#if hasErrors}}
                    <div class="alert alert-danger">
                {{#each messages }}
                    <p>{{this}}</p>
                {{/each}}
                    </div>
                {{/if}}
                <form action="/drivers/" method="post">     
                    <div class="form-group">
                        <div class="row mb-3">
                            <div class="col-md">
                                <div class="form-group">
                                    <label for="email">E-mail</label>
                                    <input type="email" id="email" name="email" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="password">Κωδικός</label>
                                    <input type="password" id="password" name="password" class="form-control">
                                </div>
                                <button type="submit" class="btn btn-primary">Εγγραφή</button>
                            </div>
                        </div>
                        <p style="color:black; text-align:center">Κάνε <a href="/drivers/signin">ΣΥΝΔΕΣΗ</a> αν έχεις κάνει εγγραφή.</p>
                    </div>
                </form>
            </div>
        </div>
     </div>
    
    </section>
    <!-- END section -->
    